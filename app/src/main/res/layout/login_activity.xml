<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LOGIN WITH FACEBOOK"
        android:id="@+id/loginWithfacebookButton"
        android:background="@drawable/facebook_login_button"
        android:layout_gravity="center_horizontal"

        android:layout_marginBottom="26dp"
        android:layout_above="@+id/signupButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/signupButton"
        android:background="@drawable/sign_up_button"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signupButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="           Already have a profile?"
                android:id="@+id/textView4"
                android:layout_below="@+id/signupButton"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sign in"
                android:textColor="#F9D716"
                android:id="@+id/textViewSignIn"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignRight="@+id/loginWithfacebookButton"
                android:layout_alignEnd="@+id/loginWithfacebookButton" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center"
            android:text="Don't know what AMPT ANIMAL is?"
            android:id="@+id/textView5" />


    </LinearLayout>

</RelativeLayout>