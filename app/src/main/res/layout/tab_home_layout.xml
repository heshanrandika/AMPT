<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignParentStart="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5a8bb2"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tab_home_dog_name"
                android:layout_marginLeft="5dp"
                android:text="Please Add/Select Dog"
                android:textColor="#ffffff" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tab_home_info"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/ic_menu_info_details" />
        </RelativeLayout>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/dog_profile"
        app:border_width="1dp"
        app:border_color="#FF000000"
        android:layout_above="@+id/num_txt4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_below="@+id/linearLayout2" />


    <TextView
        android:id="@+id/engage_txt"
        android:layout_width="135dp"
        android:layout_height="135dp"

        android:background="@drawable/circle_textview_yello"
        android:gravity="center"
        android:text="ENGAGE"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />


    <TextView
        android:id="@+id/num_txt1"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_blue"
        android:gravity="center"
        android:text="Walk \n 40/50"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:layout_alignTop="@+id/num_txt2"
        android:layout_toStartOf="@id/profile_image" />

    <TextView
        android:id="@+id/num_txt2"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_yello"
        android:gravity="center"
        android:text="Play \n 20/50"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/num_txt4"
        android:layout_toEndOf="@+id/profile_image"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/num_txt4"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_ash"
        android:gravity="center"
        android:text="Rest \n 7:24"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:layout_above="@+id/engage_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>
