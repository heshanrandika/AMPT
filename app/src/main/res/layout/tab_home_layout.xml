<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/dog_profile"
        app:border_width="1dp"
        app:border_color="#FF000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/num_txt"
        android:layout_width="135dp"
        android:layout_height="135dp"

        android:background="@drawable/circle_textview_yello"
        android:gravity="center"
        android:text="My name is NON"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/num_txt1"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_yello"
        android:gravity="center"
        android:text="My name is NON"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:layout_below="@+id/profile_image"
        android:layout_toStartOf="@+id/profile_image" />

    <TextView
        android:id="@+id/num_txt2"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_blue"
        android:gravity="center"
        android:text="My name is NON"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:layout_below="@+id/profile_image"
        android:layout_toEndOf="@+id/profile_image" />

    <TextView
        android:id="@+id/num_txt4"
        android:layout_width="85dp"
        android:layout_height="85dp"

        android:background="@drawable/circle_textview_ash"
        android:gravity="center"
        android:text="My name is NON"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:textSize="10dp"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
