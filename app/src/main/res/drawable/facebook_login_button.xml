<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2E9AFE" />
            <gradient android:angle="-90" android:startColor="#2E9AFE" android:endColor="#2E9AFE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2E9AFE" />
            <solid android:color="#2E9AFE"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#045FB4" />
            <gradient android:angle="-90" android:startColor="#045FB4" android:endColor="#045FB4" />
        </shape>
    </item>
</selector>