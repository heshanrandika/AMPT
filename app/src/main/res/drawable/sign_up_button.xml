<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffad39" />
            <gradient android:angle="-90" android:startColor="#ffad39" android:endColor="#ffad39"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffad39" />
            <solid android:color="#ffad39"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#fa861e" />
            <gradient android:angle="-90" android:startColor="#fa861e" android:endColor="#fa861e" />
        </shape>
    </item>
</selector>